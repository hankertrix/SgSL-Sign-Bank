---
import PageOfLinks from "@components/pages/PageOfLinks.astro";

// The interface for the item in the collection
interface Item {
	data: {
		category: string;
	};
}

// The description of the page
const description: string = [
	"The page containing the signs in Singapore Sign Language (SgSL),",
	"sorted by their categories in alphabetical order.",
].join(" ");

// The function to get the heading
function getHeadingFunction(item: Item): string {
	return item.data.category;
}
---

<PageOfLinks
	title="Categories"
	{description}
	collectionString="signs"
	basePath="/signs"
	{getHeadingFunction}
/>
